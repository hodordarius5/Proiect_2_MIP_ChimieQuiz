<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ChimieQuiz.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Dashboard">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="14">

            <Label Text="ChimieQuiz"
                   FontSize="28"
                   FontAttributes="Bold" />

            <Label Text="Choose a chapter and start the quiz."
                   Opacity="0.8" />

            <Border Stroke="#2A2A3A"
                    StrokeThickness="1"
                    BackgroundColor="{StaticResource CardBg}"
                    Padding="14"
                    StrokeShape="RoundRectangle 16">
                <VerticalStackLayout Spacing="6">
                    <Label x:Name="InfoLabel"
                           Text="Loading..."
                           Opacity="0.85" />
                </VerticalStackLayout>
            </Border>

            <CollectionView x:Name="ChaptersList"
                            SelectionMode="None"
                            ItemsSource="{Binding Chapters}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="#2A2A3A"
                                StrokeThickness="1"
                                BackgroundColor="{StaticResource CardBg}"
                                Padding="14"
                                Margin="0,8,0,0"
                                StrokeShape="RoundRectangle 16">
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="6">
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding Name}"
                                       FontSize="18"
                                       FontAttributes="Bold" />

                                <Label Grid.Row="1" Grid.Column="0"
                                       Text="{Binding Subtitle}"
                                       Opacity="0.8" />

                                <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                                        Text="Start"
                                        Style="{StaticResource PrimaryButton}"
                                        HeightRequest="44"
                                        Padding="18,0"
                                        Clicked="OnStartChapterClicked"
                                        CommandParameter="{Binding Name}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>