<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ChimieQuiz.Pages.ResultsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Rezultate">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="14">

            <Label x:Name="TitleLabel"
                   Text="Rezultate"
                   FontSize="26"
                   FontAttributes="Bold" />

            <!-- Score card -->
            <Border Stroke="{StaticResource BorderColor}"
                    StrokeThickness="1"
                    BackgroundColor="{StaticResource CardBg}"
                    Padding="16"
                    StrokeShape="RoundRectangle 16">

                <VerticalStackLayout Spacing="8">
                    <Label x:Name="ScoreLabel"
                           Text="Scor: 0/0"
                           FontSize="18"
                           FontAttributes="Bold"/>

                    <Label x:Name="PercentLabel"
                           Text="Procent: 0%"
                           Opacity="0.9"/>

                    <Label x:Name="CountsLabel"
                           Text="RÄƒspunse: 0 Â· GreÈ™ite: 0"
                           Opacity="0.85"/>
                </VerticalStackLayout>
            </Border>

            <!-- Actions -->
            <HorizontalStackLayout Spacing="12">
                <Button x:Name="RetryWrongButton"
                        Text="Retry greÈ™ite"
                        Style="{StaticResource PrimaryButton}"
                        Clicked="OnRetryWrongClicked"
                        IsVisible="False"
                        HorizontalOptions="FillAndExpand" />

                <Button Text="Dashboard"
                        Style="{StaticResource OptionButton}"
                        Clicked="OnDashboardClicked"
                        HorizontalOptions="FillAndExpand" />
            </HorizontalStackLayout>

            <Label Text="ÃŽntrebÄƒri greÈ™ite"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,10,0,0"/>

            <!-- Wrong list -->
            <CollectionView x:Name="WrongList"
                            ItemsSource="{Binding WrongItems}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="{StaticResource BorderColor}"
                                StrokeThickness="1"
                                BackgroundColor="{StaticResource CardBg}"
                                Padding="14"
                                Margin="0,8,0,0"
                                StrokeShape="RoundRectangle 16">
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{Binding QuestionText}"
                                       FontAttributes="Bold"
                                       FontSize="16" />

                                <Label Text="{Binding YourAnswerText}"
                                       Opacity="0.9" />

                                <Label Text="{Binding CorrectAnswerText}"
                                       Opacity="0.9" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label x:Name="NoWrongLabel"
                   Text="Bravo! Nu ai Ã®ntrebÄƒri greÈ™ite ðŸŽ‰"
                   IsVisible="False"
                   Opacity="0.85"
                   Margin="0,6,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>