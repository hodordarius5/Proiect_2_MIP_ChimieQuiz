<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Backgrounds -->
    <Color x:Key="AppBg">#0B0B10</Color>
    <Color x:Key="CardBg">#171722</Color>

    <!-- Accents (vibrant roșu/roz-portocaliu) -->
    <Color x:Key="AccentPink">#FF2D55</Color>
    <Color x:Key="AccentOrange">#FF6A00</Color>
    <Color x:Key="AccentRed">#FF3B30</Color>

    <!-- Text -->
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#C9C9D6</Color>

    <!-- Borders -->
    <Color x:Key="BorderColor">#2A2A3A</Color>
</ResourceDictionary>